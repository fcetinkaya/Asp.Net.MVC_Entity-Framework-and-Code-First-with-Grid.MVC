@model IEnumerable<Asp.NetMvc_MvcGrid.Models.Employee>
@using GridMvc.Html

@{
    ViewBag.Title = "List";
}

<h2>List</h2>
@Html.ActionLink("Add", "Add", "Grid", null, new { @class = "btn btn-primary" })

@Html.Grid(Model).Columns(column=>
{
    column.Add(m => m.firstName).Titled("First Name").Sortable(true).Filterable(true);
    column.Add(m => m.lastName).Titled("Last Name").Sortable(true).Filterable(true);
    column.Add(m => m.Age).Titled("Age").Sortable(true).Filterable(true);
    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", "Grid", new { id = o.Id }, new { @class = "btn btn-warning" }));
    column.Add()
   .Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Grid", new { id = o.Id }, new { @class = "btn btn-danger" }));
}).WithPaging(10)